programa {
  funcao inicio() {
    //comparando o uso de enquanto e Faça-enquanto
    logico condicao

    condicao = falso 

    enquanto(condicao){
      escreva("Mensagem dentro do Enquanto\n")
    }
    escreva("Fora do Equanto\n")

    condicao = falso
    faca{

    escreva("Mensagem do Faça-Enquanto\n")
     } enquanto(condicao) 
     escreva("Fora do Faça-Enquanto")
  }
}
